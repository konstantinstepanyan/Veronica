block reviews 


mixin review(username, proffesion, reviewText, imgDir, reviewTextClass)
    .review 
        .review__text-wrapper

            //- этот цикл позволяет вставить тэг в текст reviewText. без цикла <br/> выводится текстом, а не тэгом. 
            //- и с другими тэгами внутри текста - также
            if (reviewText)
                each i in reviewText
                    p.i(class = reviewTextClass) !{i}

        .review__user-wrapper 
            img(class='review__user-img' src=imgDir)
            span.username= username
            span.proffesion= proffesion
            .stars-wrapper 
                img(class='review__stars' src='img/6reviews/stars.png')


